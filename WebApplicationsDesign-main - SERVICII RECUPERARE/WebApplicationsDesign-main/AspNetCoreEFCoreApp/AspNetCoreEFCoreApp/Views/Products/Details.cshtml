@model AspNetCoreEFCoreApp.Models.Products

@{
    ViewData["Title"] = "Detalii Produs";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<style>
    .product-details-card {
        background-color: #fefefe;
        border: 2px solid #28a745;
        border-radius: 12px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        padding: 25px;
        margin-top: 40px;
    }

    .product-details-header {
        border-bottom: 2px solid #28a745;
        margin-bottom: 20px;
        padding-bottom: 10px;
    }

    .product-image {
        max-height: 220px;
        border-radius: 10px;
        object-fit: cover;
        border: 1px solid #ccc;
    }

    .product-label {
        font-weight: 600;
        color: #28a745;
    }

    .btn-green {
        background-color: #28a745;
        color: white;
        font-weight: 600;
        border-radius: 6px;
        padding: 8px 18px;
        transition: background 0.2s ease-in-out;
    }

        .btn-green:hover {
            background-color: #218838;
            color: white;
        }
</style>

<div class="container">

    <div class="product-details-card">
        <div class="product-details-header text-center">
            <h2 class="text-success"><i class="fas fa-leaf"></i> Detalii produs</h2>
        </div>

        <div class="row">
            <!-- Imagine produs -->
            <div class="col-md-4 text-center mb-3">
                @if (!string.IsNullOrEmpty(Model.Image_Product))
                {
                    var isExternal = Model.Image_Product.StartsWith("http");
                    var imageUrl = isExternal ? Model.Image_Product : Url.Content("~/images/" + Model.Image_Product);
                    <img src="@imageUrl" alt="Imagine produs" class="img-fluid product-image" />
                }
                else
                {
                    <div class="text-muted">Imagine indisponibilă</div>
                }
            </div>

            <!-- Detalii -->
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4 product-label">Nume produs:</dt>
                    <dd class="col-sm-8">@Model.Name_Product</dd>

                    <dt class="col-sm-4 product-label">Preț:</dt>
                    <dd class="col-sm-8">@Model.Price_Product RON</dd>

                    <dt class="col-sm-4 product-label">Descriere:</dt>
                    <dd class="col-sm-8">@Model.Description_Product</dd>

                    <dt class="col-sm-4 product-label">Categorie:</dt>
                    <dd class="col-sm-8">@Model.Categories?.Name_Categories</dd>
                </dl>
            </div>
        </div>

        <div class="text-end mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id_Product" class="btn btn-warning me-2">✏️ Editează</a>
            <a asp-action="Index" class="btn btn-green">↩️ Înapoi la listă</a>
        </div>
    </div>

</div>

<script src="https://kit.fontawesome.com/5471644867.js" crossorigin="anonymous"></script>
