@model AspNetCoreEFCoreApp.Models.Contact

@{
    ViewData["Title"] = "Editează Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f4fef9;
        font-family: 'Segoe UI', sans-serif;
    }

    .edit-container {
        max-width: 600px;
        margin: 40px auto;
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        padding: 30px 35px;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.07);
    }

    h1 {
        color: #198754;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        margin-bottom: 15px;
    }

        .form-control:focus {
            border-color: #198754;
            outline: none;
            box-shadow: 0 0 4px #19875466;
        }

    .btn-submit {
        background-color: #198754;
        color: white;
        border: none;
        padding: 10px 18px;
        font-weight: 600;
        border-radius: 6px;
        transition: 0.3s ease-in-out;
    }

        .btn-submit:hover {
            background-color: #146c43;
        }

    .btn-back {
        margin-top: 15px;
        display: inline-block;
        color: #198754;
        font-weight: 600;
        text-decoration: none;
    }

    .text-danger {
        font-size: 13px;
    }
</style>

<div class="edit-container">
    <h1>✏️ Editează Contact</h1>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Subject"></label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Message"></label>
            <textarea asp-for="Message" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="💾 Salvează" class="btn-submit" />
        </div>
    </form>

    <a asp-action="Index" class="btn-back">⬅️ Înapoi la listă</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
