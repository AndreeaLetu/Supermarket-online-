@model AspNetCoreEFCoreApp.Models.PromoPackets

@{
    ViewData["Title"] = "Edit";
}

<div class="edit-header">
    <h1>Editează Pachet Promotional</h1>
    <a asp-action="Index" class="btn btn-secondary">Înapoi la listă</a>
</div>

<div class="edit-form-container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id_Product" />
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control colorful-input" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control colorful-input" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price_Packet" class="control-label"></label>
                    <input asp-for="Price_Packet" class="form-control colorful-input" />
                    <span asp-validation-for="Price_Packet" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo_Pack" class="control-label"></label>
                    <input asp-for="Photo_Pack" class="form-control colorful-input" />
                    <span asp-validation-for="Photo_Pack" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type_Pack" class="control-label"></label>
                    <input asp-for="Type_Pack" class="form-control colorful-input" />
                    <span asp-validation-for="Type_Pack" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvează" class="btn btn-primary colorful-button" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
